<div class="row image-head text-center align-items-center mb-4">
  <h1>Save any Kinds of Movies</h1>
  <h3>Classic</h3>
</div>

<div class="row">
  <div class="col-10 mx-auto">
    <div class="page-title d-flex align-items-center justify-content-between">
      <h1 class="m-0">My List</h1>
      <%= link_to 'New List', new_list_path, class: "btn btn-success h-50" %>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-10 mx-auto">

      <div class="list-cards row row-cols-4">

        <% @lists.each do |list| %>
          <div class="list-card text-center align-items-center border p-3 m-2">
            <%= link_to list.name, list, class: "text-info text-decoration-none fs-3 fw-bold" %>
          </div>
        <% end %>

      </div>

  </div>
</div>

<div class="row">
  <div class="col-10 mx-auto">
    <div class="mt-3">
      <h1 class="m-0">Add New Bookmark</h1>
      <div class="form new-bookmark">
        <%= simple_form_for([@bookmark]) do |f| %>
          <%= f.input :comment %>
          <%= f.association :movie, collection: Movie.all.order(:title), prompt: "Choose a Movie", input_html: {data: {controller: "tom_select"}} %>
          <%= f.association :list, collection: List.all.order(:name), prompt: "Choose a List" %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
